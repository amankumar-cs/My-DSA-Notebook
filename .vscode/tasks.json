{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run C++ with g++ and auto-delete",
      "type": "shell",
      "command": "g++",
      "args": [
        "${file}",
        "-o",
        "temp.out",
        "&&",
        "./temp.out",
        "&&",
        "rm",
        "temp.out"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
